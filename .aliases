alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias ls='ls --color=auto'
alias emacs='emacs -nw'
alias svim='sudo -E nvim'
alias ssh='ssh -o "ServerAliveInterval 60"'
alias vi='nvim'
alias v='nvim'
